<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:id="@+id/layout_product">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:src="@color/purple_500" />

    <TextView
        android:id="@+id/tv_product_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@id/img_product"
        android:textSize="16sp"
        android:text="PRODUCT TITLE"/>

    <TextView
        android:id="@+id/tv_product_list_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/img_product"
        android:layout_below="@id/tv_product_list_title"
        android:text="Category" />

    <TextView
        android:id="@+id/tv_product_list_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_list_category"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_product"
        android:drawableLeft="@drawable/icon_star"
        android:drawablePadding="2dp"
        android:text="Rating" />

    <TextView
        android:id="@+id/tv_product_list_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/img_product"
        android:layout_below="@id/tv_product_list_rating"
        android:textSize="20sp"
        android:textColor="@color/purple_200"
        android:text="Price" />

</RelativeLayout>